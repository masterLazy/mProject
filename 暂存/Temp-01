//In the normal version, please remove this:
typedef double Math_F;

#include <iostream> 
using namespace std;

template<typename Ty>
class Value
{
private:
	int mode;//0: real value;1
	Ty rv;
	Value *a,*b;
	enum class Opt
	{
		add,sub,mlt,div,pow
	}opt;
	
public:
	Value(Ty x=0)
	{
		mode=0;
		rv=x;
	}
	
	//Work, then return the result
	Ty get()
	{
		if(mode==0)return rv;
		else
		{
			switch(opt)
			{
				case Opt::add:break;
			}
		}
	}
};

typedef Value<Math_F> Value_F;

int main()
{

}
